package BinaryTree;

public class BinaryTree {
	int idx;
	BinaryTree(){
		this.idx = -1;
	}
	class Node{
		int data;
		Node left;
		Node right;
		
		Node(int data){
			this.data = data;
			left = null;
			right = null;
		}
		
	}
	
    public Node createTree(int[] tree) {
        idx++;
        if (idx >= tree.length || tree[idx] == -1) {
            return null;
        }
        
        Node newNode = new Node(tree[idx]);
        newNode.left = createTree(tree);
        newNode.right = createTree(tree);
        return newNode;
    }
    public void preorder(Node root) {
    	if(root == null) {
    		return;
    	}
    	System.out.printf(root+ " ");
    	preorder(root.left);
    	preorder(root.right);
    	System.out.println();
    }

    
    public static void main(String[] args) {
        BinaryTree bt = new BinaryTree();
        int[] treeArray = {1,2,4,-1,-1,5,-1,-1,3,3,-1,6,-1,-1}; 
        Node root = bt.createTree(treeArray);
        bt.preorder(root);
        
    }
}
